<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>영화 상세 화면</title>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="js/movie_detail.js?ver=08"></script>
<style type="text/css">
#detailDiv {
	margin: 10px 20px;
	text-align: left;
	padding: 30px;
}
#detailTable {
	width: 95%;
	border: 1px solid black;
	border-collapse: collapse;
}
#detailTable img {
	width: 220px;
	height: 300px;
}
#detailTable td {
	border: 1px solid black;
	padding: 10px;
}
h3 {
	margin: 0;
	padding: 0;
}
#replyTable {
	width: 95%;
}
#replyTable td {
	text-align: right;
	height: 25px;
}
input[type="text"] {
	width: 99%;
	height: 100%;
}
#selectScore {
	width: 100%;
	height: 25px;
}
#reserBtn, #isUseBtn, #listBtn {
	margin-top: 10px;
	width: 100px;
	height: 30px;
	color: white;
	background-color: #F24535;
	border-style: none;
}
font {
	font-weight: bold;
}
#noUse {
	color: red;
}
#replyTable2 {
	width: 95%;
	border-top: 2px solid gray;
	border-bottom: 2px solid gray;
	border-collapse: collapse;
	font-size: 14px;
	margin-top: 10px;
}
#replyTable2 tr {
	border-bottom: 1px dashed gray;
}
#replyTable2>tr, td {
	padding: 5px;
	text-align: left;
}
span {
	font-weight: bold;
	font-size: 14px;
	color: black;
}
</style>
</head>
<body>
<div id="detailDiv">
	<table id="detailTable">
	<colgroup>
		<col width="20%">
		<col width="*">
	</colgroup>
		<tr>
			<td><img alt="${movie.movieTitle }" src="upload/${movie.movieImage }"></td>
			<td>
				<h2>${movie.movieTitle }</h2>
				<hr>
				감독 : ${movie.movieDerector } | 배우 : ${movie.movieActors }<br>
				장르 : 
				<c:forEach items="${genre }" var="list">
					${list.genreName }
				</c:forEach>
				<br>
				기본 : ${movie.ratingName }  | ${movie.movieRunningTime }분<br>
				개봉일 : ${movie.movieOpenDate }<br>
				<c:if test="${movie.movieIsUse eq 'Y' }">
					<font id="yesUse">상영중</font><br>
					<c:if test="${sessionScope.MEMBER_INFO.memberId ne 'admin' }">
						<input type="button" value="예매" id="reserBtn" >
						<input type="hidden" value="${sessionScope.MEMBER_INFO.memberId }" id="memberId"/>
					</c:if>
					<c:if test="${sessionScope.MEMBER_INFO.memberId eq 'admin' }">
						<input type="button" value="상영중지" id="isUseBtn" />
						<input type="hidden" value="${movie.movieNum }" id="movieNum">
					</c:if>
				</c:if>
				<c:if test="${movie.movieIsUse eq 'N' }">
					<font id="noUse">상영중지</font><br>
				</c:if>
				<input type="button" value="목록가기" id="listBtn"/>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<h3>줄거리</h3><br>
				${movie.movieContent }
			</td>
		</tr>
	</table>
	<br>
	
	<!-- 댓글 입력 테이블 -->
	<c:if test="${not empty sessionScope.MEMBER_INFO }">
	<table id="replyTable" >
		<colgroup>
			<col width="10%">
			<col width="*">
			<col width="5%">
		</colgroup>
		<tr>
			<td>
				<select id="selectScore">
					<option value="0">평점선택</option>
					<c:forEach items="${scoreList }" var="scoreInfo">
						<option value="${scoreInfo.scoreNum }">${scoreInfo.scoreGrade }</option>
					</c:forEach>
				</select>
			</td>
			<td><input type="text" id="replyContent"></td>
			<td><input type="button" value="댓글달기" id="replyBtn"></td>
		</tr>
	</table>
	</c:if>
	<input type="hidden" id="movieNum" value="${movie.movieNum }">
	
	<!-- 입력한 댓글 조회 테이블 -->
	<table id="replyTable2">
		<c:choose>
			<c:when test="${replyList.size() ne 0 }">
				<c:forEach items="${replyList }" var="reply">
					<tr>
						<td>${reply.scoreGrade } <span>${reply.replyWriter }</span> ${reply.createDate }
							<br>${reply.replyContent }
						</td>
					</tr>
				</c:forEach>
			</c:when>
			<c:otherwise>
				<tr>
					<td style="text-align: center;">등록된 댓글이 없습니다</td>
				</tr>
			</c:otherwise>
		</c:choose>
	</table>

</div>
</body>
</html>