@charset "UTF-8";

/* 회원정보 수정페이지 */

/* 로고 */


#container{
	padding: 0;
	margin: 0;
	margin: 30px auto;
	text-align: center;
}

#memberInfoTable {
	border-collapse: collapse;
	margin: 20px auto;
	width: 600px;
	text-align: left;
	border-spacing:1px;
}

#memberInfoTable caption {
	padding: 30px 0;
}

#memberInfoTable label {
	font-weight: bold;
	padding: 10px;
	vertical-align: top;
	font-size: 20px;
}

#memberInfoTable tr {
	border-bottom: 1px solid white;
}

#memberInfoTable th {
	background-color: lightgray;
	text-align: center;
}

#memberInfoTable td {
	height: 60px;
	padding: 10px;
}

#memberInfoTable td:nth-child(2) {
	padding-left: 20px;
}

#setBtn{
	margin: 10px auto;
	width: 600px;
	height: 50px;
	font-weight: bold;
	color: white;
	background-color: #F24535;
	border-style: none;
	font-size: 20px;
}

input[type="password"], input[type="text"], input[type="tel"] {
	height: 30px;
}