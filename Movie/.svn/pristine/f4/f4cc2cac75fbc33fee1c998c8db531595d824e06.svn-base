<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>결제 화면</title>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://kit.fontawesome.com/148cfa54ae.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="css/reservation/paymentScreen.css?ver=00">
</head>
<body>
	<div id="payDiv">
		<!-- =================================== 주문/결제 테이블 =================================== -->
		<table id="payTable">
			<caption>주문/결제</caption>
			<colgroup>
				<col width="20%">
				<col width="12%">
				<col width="*%">
				<col width="12%">
				<col width="20%">
			</colgroup>
			<tr>
				<td rowspan="4">
					<div id="movieImg">
						<img src="upload/${sessionScope.MOVIE_INFO.movieImage} " title="${sessionScope.MOVIE_INFO.movieTitle}" alt="${sessionScope.MOVIE_INFO.movieTitle}" >
					</div>
				</td>
				<td colspan="4">
					<h3>${sessionScope.MOVIE_INFO.movieTitle }</h3>
				</td>
			</tr>
			<tr>
				<td><font class="sub title">상영일</font></td>
				<td><font class="sub">${list[0].scheduleStart.substring(0, 10)}(${list[0].dy })</font></td>
				<td><font class="sub title">상영시간</font></td>
				<td><font class="sub">${list[0].scheduleStart.substring(11, 16) } ~ ${list[0].scheduleEnd.substring(11, 16)}<!-- 마치는 시간 --></font></td>
			</tr>
			<tr>
				<td><font class="sub title">상영관</font></td>
				<td><font class="sub">${list[0].screenName }</font></td>
				<td><font class="sub title">관람인원</font></td>
				<td><font class="sub">${list.size() } 명</font></td>
			</tr>
			<tr>
				<td><font class="sub title">좌석</font></td>
				<td><font class="sub">
				<c:forEach items="${list}" var="seat" varStatus="status">
					${seat.rowNum }${seat.colNum }&nbsp; 
				</c:forEach>
				</font></td>
				<td></td>
				<td></td>
			</tr>
			<tr>
				<td colspan="4"><font class="total">총 주문금액</font></td>
				<td><font class="total price">${price }</font><font class="sub"> 원</font></td>
			</tr>
		</table>
		<br> <br>

		<!-- =================================== 포인트 테이블 =================================== -->
		<table id="pointTable">
			<caption>포인트 사용</caption>
			<tr class="main_title">
				<td><font class="point">POINT</font></td>
			</tr>
			<tr>
				<td><font class="sub title"> <br> 사용가능 포인트가 100P
						이상인 경우 100P 단위로 사용하실 수 있습니다. <br> <br>
						<hr>
				</font></td>
			</tr>
			<tr>
				<td>
					<table id="usePointTable">
						<tr>
							<td>
								현재 포인트 : <span id="point">${sessionScope.MEMBER_INFO.memberPoint }</span> <i class="fas fa-parking"></i> 
							</td>
						</tr>
						<tr>
							<td>
								사용 포인트 : <input type="text" id="usePoint"> <i class="fas fa-parking"></i>
							</td>
						</tr>
						<tr>
							<td>
								잔여 포인트 : <span id="lastPoint"></span> <i class="fas fa-parking"></i>
							</td>
						</tr>
						<tr>
							<td>
								<input type="button" value="적용" id="apply">
								<input type="button" value="다시작성" id="reset">
							</td>
						</tr>
					</table>
				</td>
			</tr>
		</table>
		<br> <br>

		<!-- =================================== 그 외 결제수단 =================================== -->
		<table id="payTable2">
			<caption>최종결제수단</caption>
			<tr class="main_title">
				<td><font class="point">그 외 결제수단</font></td>
			</tr>
			<tr>
				<td>
					<table id="selectPayTable">
						<tr>
							<td><input type="radio" name="payWay" value="card">
								신용카드 <input type="radio" name="payWay" value="easy">
								간편결제 <input type="radio" name="payWay" value="bank">
								계좌이체 <input type="radio" name="payWay" value="phone">
								휴대폰결제</td>
						</tr>
						<tr>
							<td>
								<div id="selectCardDiv">
									<!-- =================================== 카드 선택 =================================== -->
									카드종류 <select id="selectCardList">
										<option value="0">&nbsp;카드를 선택하세요</option>
										<option value="1">롯데카드</option>
										<option value="2">국민카드</option>
										<option value="3">신한카드</option>
										<option value="4">삼성카드</option>
									</select>
								</div> <!-- =================================== 계좌 이체 =================================== -->
								<div id="bankDiv">
									<table id="bankTable">
										<colgroup>
											<col width="30%">
											<col width="*">
										</colgroup>
										<tr>
											<td>예금주</td>
											<td>어쩌다 발견한 영화</td>
										</tr>
										<tr>
											<td>농협은행</td>
											<td>123-4567-8910-11</td>
										</tr>
										<tr>
											<td>우리은행</td>
											<td>1234-567-891011</td>
										</tr>
										<tr>
											<td>국민은행</td>
											<td>123456-78-910111</td>
										</tr>
									</table>
								</div> <!-- =================================== 휴대폰 결제 =================================== -->
								<div id="phoneDiv">
									<input type="text" placeholder="휴대폰 번호 입력">
								</div>
							</td>
						</tr>
					</table>
				</td>
			</tr>
		</table>
		<br> <br>

		<!-- =================================== 최종 Div =================================== -->
		<div id="finallyDiv">
			<div id="beforeDiv">
				<div id="total_box">
					<div id="beforeBox">
						<a href="#"><i class="fas fa-arrow-left"> 이전단계</i></a>
					</div>
				</div>
			</div>
			<div id="totalDiv">
				<div id="total_box">
					<div class="total_box">
						<table id="totalTalbe">
							<colgroup>
								<col width="50%">
								<col width="50%">
							</colgroup>
							<tr>
								<td colspan="2"><font class="total_title">주문금액</font></td>
							</tr>
							<tr>
								<td></td>
								<td></td>
							</tr>
							<tr>
								<td></td>
								<td><font class="total_title">${price }원</font></td>
							</tr>
						</table>
					</div>
					<div class="total_box">
						<table id="totalTalbe">
							<colgroup>
								<col width="50%">
								<col width="50%">
							</colgroup>
							<tr>
								<td colspan="2"><font class="total_title">할인금액</font></td>
							</tr>
							<tr>
								<td></td>
								<td></td>
							</tr>
							<tr>
								<td></td>
								<td><font class="total_title">(-) 0원</font></td>
							</tr>
						</table>
					</div>
					<div class="total_box">
						<table id="totalTalbe">
							<colgroup>
								<col width="50%">
								<col width="50%">
							</colgroup>
							<tr>
								<td colspan="2"><font class="total_title">총 결제 금액</font>(주문금액
									- 할인금액)</td>
							</tr>
							<tr>
								<td></td>
								<td><font class="finally_total">???</font></td>
							</tr>
							<tr>
								<td colspan="2"><input type="button" value="결제하기"
									id="buyBtn"></td>
							</tr>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script type="text/javascript">
		$(document).ready(function() {
			$('#phoneDiv').hide();
			$('#selectCardDiv').hide();
			$('#bankDiv').hide();
			
			// radio 타입 선택시
			$(document).on('change', 'input[type="radio"]', function() {
				var isChecked = $(this).val();

				if (isChecked == 'card') {
					$('#phoneDiv').hide();
					$('#bankDiv').hide();
					$('#selectCardDiv').show();
				} 
				else if (isChecked == 'bank') {
					$('#phoneDiv').hide();
					$('#selectCardDiv').hide();
					$('#bankDiv').show();
				} 
				else if (isChecked == 'phone') {
					$('#selectCardDiv').hide();
					$('#bankDiv').hide();
					$('#phoneDiv').show();
				}
				else {
					$('#phoneDiv').hide();
					$('#selectCardDiv').hide();
					$('#bankDiv').hide();
				}
			});
			
			
			// 사용 포인트 입력 시
			$(document).on('keyup', '#usePoint', function() {
				
				var point = parseInt($('#point').text());
				var usePoint = $('#usePoint').val();
				var lastPoint = point - usePoint;
				
				$('#lastPoint').text(lastPoint);
			});
			
			// 다시 작성 버튼 클릭 시
			$(document).on('keyup', '#usePoint', function() {
				
			});
			
		});
	</script>
</body>
</html>