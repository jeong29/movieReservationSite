@charset "UTF-8";

.container{
	width: 1200px;
	margin: 0 auto;
	align-content: center;
	height: 90%;
}


#header, #content {
	width: 90%;
	border: 1px solid lightgray;
	margin: 0 auto;
	text-align: center;
	padding: 20px;
	padding-bottom: 10px;
	
}
#header {
	margin-top: 30px;
	background: #ededed;
}
#content {
	height: 300px;
}
#content p {
	padding-left: 40px;
	padding-right: 40px;
	padding-top: 20px;
}
.button{
	margin: 0 auto;
}
.button table {
	margin: 0 auto;
		
}
#listBtn{
	margin: 10px auto;
	width: 100px;
	height: 35px;
	font-weight: bold;
	color: white;
	background-color: #F24535;
	border-style: none;
}

#updateBtn, #deleteBtn {
	margin: 10px auto;
	width: 100px;
	height: 35px;
	font-weight: bold;
	color: white;
	background-color: rgb(61,157,242);
	border-style: none;
}