@charset "UTF-8";

#myMovieDiv {
	margin: 0;
	padding: 30px 0;
}
#myMoiveTable {
	border: 1px solid black;
	border-collapse: collapse;
	margin: 0 auto;
	width: 80%;
	text-align: left;
	font-size: 20px;
}
caption {
	text-align: left;
	padding-bottom: 20px;
	font-size: 30px;
	font-weight: bold;
}
#myMoiveTable tr {
	height: 60px;
}
#myMoiveTable tr:nth-child(1) {
	background-color: lightgray;
}
#myMoiveTable td:nth-child(2) {
	border-left: 1px solid lightgray;
}
#sub_title {
	font-weight: bold;
}
#sub_cont {
	color: gray;
	font-size: 16px;
}
.box {
	/* border: 1px solid black; */
	box-sizing: border-box;
	padding: 10px;
}
.con1 {
	float: left;
	width: 70%;
}
.con2 {
	float: right;
	width: 30%;
	text-align: right;
}


#myReservTable{
	border: 1px solid black;
	border-collapse: collapse;
	margin: 0 auto;
	width: 80%;
	text-align: left;
	font-size: 20px;
}
#myReservTable td {
	padding: 20px 0;
}
#movieImg {
	border: 1px solid black;
	width: 80%;
}
#movieImg img {
	width: 100%;
}
h3 {
	margin-top: 10px;
	margin-bottom: 0px;
}
hr {
	margin: 0;
	width: 98%;
	text-align: left;
	border: 1px solid lightgray;
}
#total {
	color: lightseagreen;
	font-weight: bold;
}

#myOtoListTable{
	border: 1px solid black;
	border-collapse: collapse;
	margin: 0 auto;
	width: 80%;
	text-align: left;
	font-size: 20px;
}

/* 탭메뉴 */
.container{
	width: 100%;
	margin: 0 auto;
}

ul.tabs{
	margin: 0px;
	padding: 0px;
	list-style: none;
	
}
ul.tabs li{
	background: none;
	color: #222;
	display: inline-block;
	padding: 10px 15px;
	cursor: pointer;
	width: 45%;
	background: #ededed;
}

ul.tabs li.current{
	background: white;
	color: #222;
}

.tab-content{
	display: none;
	/* background: #ededed; */
	padding: 15px;
}

.tab-content.current{
	display: inherit;
}
#otoTable{
	width: 100%;
	
}

#otoTable a {
	color: black;
	font-size: 18px;
	text-decoration: none;
}

#otoTable td{
	font-size: 18px;
	padding: 5px;
}

#otoIsUse{
	padding:2px;
}

