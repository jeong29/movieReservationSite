@charset "UTF-8";

body{
  line-: 1.6;
}
a{
 color: black;
 text-decoration: none;
}
.container h1{
	font-size: 25px;
	margin-top: 10px;
}
.container{
  width: 80%;
  margin: 0 auto;
}
ul.tabs{
  margin: 0px;
  padding: 0px;
  list-style: none;
  padding-top: 10px;
 
}
ul.tabs li{
  background: none;
  color: #222;
  display: inline-block;
  padding: 10px 15px;
  cursor: pointer;
  width: 30%;
  box-sizing: border-box;
  font-weight: bold;
 
}
 /* 탭메뉴들 */
ul.tabs li.current{
  /* background: rgb(61,157,242); */
    border: 2px solid lightgray;
  color: #222;
  border-bottom: 0;
}
.tab-content{
  display: none;
 /*  background: #ededed; */
   border: 2px solid lightgray;
  padding: 15px;
  width: 100%;
  margin: 0 auto;
  text-align: center;
}
 
.tab-content.current{
  display: inherit;
}
 table {
   border-collapse: collapse;
   border: 0px;
   clear: both;
   width: 100%;
} 
table a{
	color: black;
}
table th{
	width: 100px;
	padding: 10px;
	font-weight: bold;
	border-bottom: 1px solid #ccc;
	background: #efefef;
}
table td{
	padding: 10px;
	vertical-align: top;
	border-bottom: 1px solid #ccc;
}


.btn{
   margin: 10px auto;
   width: 100px;
   height: 35px;
   font-weight: bold;
   color: white;
   background-color: #F24535;
   border-style: none;
}

#searchDiv {

	}
#searchValue{
	width: 80%;	
}
#searchTable{
   width:100%;
   margin: 0 auto;
}
.faqTap{
	
}

.faqTap li{
	width:114px;;
   float: left;
   margin-top: 10px;
   margin-left: 5px;
   list-style: none;
   box-sizing:border-box;
}

.faqTap li:hover{
   text-decoration: underline;
   font-weight: bold;
}
.faqTap a {
   text-decoration: none;
   
}
#faqTapDiv{
   height:50px; 
   border: 1px solid lightgray;
   background-color: lightgray;
}
#faqTable{
   margin-top: 20px;
 
}
#oneToOneDiv{
   width: 100%;
}

#questionDiv{
	width: 100%;
	margin-top: 20px;
}
#questionTable{
	border-collapse:collapse;
	border-spacing:1px;
	line-height:1.5;
	border-top:1px solid #ccc;
    width: 95%;
    margin: 20px 10px;
}
#questionTable td{
	padding: 10px;
	vertical-align: top;
}

#infoDiv{
   font-size : 12px;
}
#privacyDiv{
   font-size : 10px;
   height: 180px;
   overflow: scroll;
   background-color: lightgray;
}
h1{
	text-align: center;
	font-size: 20px;
}

.answerTr td{
	padding: 20px;
}
#infoDiv ul li{
	list-style: none;
}



