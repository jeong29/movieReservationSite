<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>영화 메인 리스트</title>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="js/movie_list.js?ver=13"></script>
<style type="text/css">
#listDiv {
	padding: 20px;
}

#selectMoiveTable {
	margin: 10px auto;
	text-align: center;
	width: 95%;
	padding: 10px;
	background-color: white;
	border-top: 2px solid black;
	border-bottom: 2px solid black;
}

.title {
	font-size: 18px;
	font-weight: bold;
}

.openDate{
	font-size: 14px;
}

#selectMoiveTable td {
	padding: 5px;
	position: relative;
}

/* 검색 css */
#searchTable {
	margin-left: 30px;
	padding-top: 20px;
	width: 250px;
}
#genreSelector {
	height: 30px;
	border-style: none;
	border-radius: 5px;
	background-color: lightgray;
}
input[type="text"] {
	background-color: lightgray;
	width: 180px;
}
#searchTable td {
	padding-right: 5px;
	height: 30px;
}
#searchValue{
	height: 100%;
	border-style: none;
	border-radius: 5px;
}
#searchBtn {
	width: 60px;
	height: 100%;
	color: white;
	background-color: #F24535;
	border-style: none;
	border-radius: 5px;
	cursor: pointer;
}

/* 상영중지 : 빨강 */
#no {
	color: red;
}


/* 이미지 이벤트 */
figure.box {
	position: relative;
	margin: 0 auto;
	overflow: hidden;
	width: 150px;
	height: 215px;
	color: #ffffff;
	text-align: center;
	font-size: 16px;
	background-color: #000000;
}

figure.box * {
  box-sizing: border-box;
  transition: all 0.35s ease;
}

figure.box img {
  width: 100%;
  backface-visibility: hidden;
  vertical-align: top;
}

figure.box:after, figure.box figcaption {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
}

figure.box:after {
	content: '';
	background-color: rgba(0, 0, 0, 0.65);
	transition: all 0.35s ease;
	opacity: 0;
}

figure.box figcaption {
	z-index: 1;
}

figure.box .Btn {
	width: 60%;
	margin: 10px auto;
	padding: 0;
	opacity: 0;
	background-color: rgb(242, 69, 53);
	cursor: pointer;
	line-height: 30px;
}

figure.box .Btn a {
	color: white;
	text-decoration: none;
}

figure.box .reserv {
	margin-top: 70px;
}

figure.box .noReserv {
	background-color: gray;
	margin-top: 70px;
	font-size: 16px;
}

figure.box:hover img {
	zoom: 1;
	filter: alpha(opacity=50);
	opacity: 0.5;
}

figure.box:hover h4 {
	transform: translate(0px, 0px);
	opacity: 1;
}

figure.box:hover .Btn {
	transform: translate(0px, 0px);
	opacity: 1;
}

</style>
</head>
<body>
<div id="listDiv">
	<table id="searchTable">
	<colgroup>
		<col width="30%">
		<col width="*">
		<col width="20%">
	</colgroup>
		<tr>
			<td>
			<select id="genreSelector">
				<option value="">장르선택</option>
					<c:forEach items="${genreList }" var="genreInfo">
						<option value="${genreInfo.genreNum }">${genreInfo.genreName }</option>
					</c:forEach>
			</select>
			</td>
			<td>
				<input type="hidden" value="MOVIE_TITLE" id="searchKeyword">
				<input type="text" id="searchValue" placeholder=" 영화명을 입력해 주세요">
			</td>
			<td><input type="button" value="검색" id="searchBtn"></td>
		</tr>
	</table>
	<table id="selectMoiveTable">
		<colgroup>
			<col width="25%">
			<col width="25%">
			<col width="25%">
			<col width="25%">
		</colgroup>
		<caption></caption>
		<c:choose>
			<c:when test="${list.size() eq 0}">
				<tr>
					<td colspan="4">등록된 영화가 없습니다</td>
				</tr>
			</c:when>
			<c:otherwise>
			
			<!-- 영화 리스트 조회 -->
			<tr>
				<c:forEach items="${list }" var="movie" varStatus="status">
						<td>
						<figure class="box">
							<img alt="${movie.movieTitle }" src="upload/${movie.movieImage }">
							<figcaption>
							<c:if test="${movie.movieIsUse eq 'Y' }">
								<div class="reserv Btn">
									<a href="#" onclick="goReserv('${sessionScope.MEMBER_INFO.memberId }','${movie.movieNum}');">예매하기</a>
								</div>
							</c:if>
							<c:if test="${movie.movieIsUse eq 'N' }">
								<div class="noReserv Btn">
									상영중지
								</div>
							</c:if>
								<div class="detail Btn">
									<a href="#" onclick="goDetail('${movie.movieNum}');">상세보기</a>
								</div>
							</figcaption>
						</figure>
						<br>
						<font class="title">${movie.movieTitle }</font><br>
						<font class="openDate">${movie.movieOpenDate }</font><br>
						<b><c:if test="${movie.movieIsUse eq 'Y' }">
							상영중
						</c:if>
						<c:if test="${movie.movieIsUse eq 'N' }">
							<font id="no">상영중지</font>
						</c:if></b>
						</td>
					<c:if test="${(status.index + 1) % 4 eq 0 and status.index ne 0 }">
					</tr>
					<tr>
					</c:if>
				</c:forEach>
			</tr>
			</c:otherwise>
		</c:choose>		
	</table>
</div>
</body>
</html>