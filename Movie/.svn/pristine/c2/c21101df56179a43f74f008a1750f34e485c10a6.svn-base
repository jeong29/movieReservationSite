<!-- to민희언니 -->
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>공지사항 등록 페이지</title>
<style type="text/css">
#noticeFormDiv{
	margin: 0 auto;
	padding: 10px;
	width: 1200px;
	height: auto;
}
#noticeFormTable{
	margin: 0 auto;
	width: 50%;
	padding: 10px;
	border: 1px solid black; 
	border-collapse: collapse;
}
#listBtn , #noticeBtn {
	margin: 10px auto;
	width: 100px;
	height: 35px;
	font-weight: bold;
	color: white;
	background-color: #F24535;
	border-style: none;
}


</style>
</head>
<body>

<form action="noticeForm.do" method="post" >
<div id="noticeFormDiv">
	<h3>공지사항 등록</h3>
	<table id="noticeFormTable" border="1">
		<tr>
			<td>제목</td>
			<td><input type="text" name="noticeTitle"/></td>			
		</tr>
		<tr>
			<td>내용</td>
			<td><textarea rows="20" cols="30" name="noticeContent"></textarea></td>			
		</tr>
		<tr>
			<td colspan="2"><input type="submit" value="공지등록" id="noticeBtn"/></td>
		</tr>
	</table>
	<input type="button" onclick="location.href='service.do'" value="목록가기" id="listBtn"/>
</div>	

	
</form>



</body>
</html>