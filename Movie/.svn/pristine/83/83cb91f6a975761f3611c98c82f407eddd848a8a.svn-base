@charset "UTF-8";

.seatDiv {
	text-align: center;
}
.seatDiv h2 {
	margin: 40px 0;
	padding: 10px 0;
	width: 100%;
	font-size: 2em;
	font-weight: bold;
	border: 2px solid black;
}
.seatTable {
	margin: 0 auto;
	width: 100%;
	border-collapse: collapse;
}

.seatTable td {
	border: 1px solid black;
}
.N, .Y {
	width: 2.7%;
}

input[type="button"] {
	margin: 10px auto;
	width: 120px;
	height: 35px;
	font-weight: bold;
	color: white;
	background-color: #F24535;
	border-style: none;
}

/* 좌석 선택 유무 */
.N {
	color: black;
	cursor: pointer;
}
.Y {
	background: lightgray;
}