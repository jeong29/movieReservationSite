@charset "UTF-8";

#payDiv {
	margin: 0;
	padding: 0;
	padding-top: 30px;
}

#payTable caption {
	text-align: left;
	padding-bottom: 20px;
	font-size: 30px;
	font-weight: bold;
}

#payTable {
	border-top: 2px solid black;
	border-collapse: collapse;
	margin: 0 auto;
	width: 80%;
	text-align: left;
	font-size: 20px;
	border-collapse: collapse;
}

#payTable td {
	padding: 10px 20px;
}

#payTable tr:nth-child(5) {
	background-color: #A3B2BF;
}

#movieImg {
	margin: 0 auto;
	width: 80%;
}

#movieImg img {
	width: 100%;
}

h3 {
	margin-top: 10px;
	margin-bottom: 0px;
}

.title {
	color: gray;
}

.price {
	font-size: 20px;
	font-weight: bold;
}

.total {
	font-size: 25px;
}

/* =================================== 포인트 테이블 =================================== */
#pointTable {
	border: 1px solid gray;
	border-collapse: collapse;
	margin: 0 auto;
	width: 80%;
	text-align: left;
	font-size: 20px;
}

#pointTable caption {
	text-align: left;
	padding-bottom: 20px;
	font-size: 30px;
	font-weight: bold;
}

.main_title {
	background-color: #3F5B73;
}

#pointTable td {
	padding: 10px 20px;
	height: 50px;
}

.point {
	color: white;
	font-weight: bold;
	font-size: 25px;
}

/* =================================== 포인트 사용, 결제수단 선택 =================================== */
#usePointTable, #selectPayTable {
	border-top: 1px solid black;
	margin: 0 auto;
	padding: 0;
	width: 90%;
	text-align: center;
	background-color: #A3B2BF;
	font-size: 16px;
}

#usePointTable caption, #selectPayTable caption {
	text-align: left;
	padding-bottom: 20px;
	font-size: 30px;
	font-weight: bold;
}

#usePointTable td, #selectPayTable td {
	height: 30px;
}

#usePointTable input[type="text"] {
	width: 100px;
}

#apply {
	background-color: #307CBF;
	padding: 10px;
	width: 100px;
	color: white;
	border-style: none;
}

#reset {
	padding: 10px;
	width: 100px;
	border: 1px solid #93A603;
	background-color: white;
}
.box {
	width: 49%;
	height: 80%;
	box-sizing: border-box;
}

.con1 {
	float: left;
	text-align: right;
}

.con2 {
	float: right;
	text-align: left;
}

.con3 {
	text-align: center;
}

/* =================================== 그 외 결제수단 =================================== */
#payTable2 {
	border: 1px solid gray;
	border-collapse: collapse;
	margin: 0 auto;
	width: 80%;
	text-align: left;
	font-size: 20px;
}

#payTable2 caption {
	text-align: left;
	padding-bottom: 20px;
	font-size: 30px;
	font-weight: bold;
}

#payTable2 td {
	padding: 10px 20px;
	height: 50px;
}

#selectCardList {
	height: 25px;
}

#bankTable {
	margin: 0 auto;
	width: 30%;
	text-align: left;
}

#bankTable td {
	height: 25px;
	padding: 0;
}

#bankTable td:nth-child(1) {
	font-weight: bold;
}

/* =================================== 최종 결제 =================================== */
#finallyDiv {
	width: 100%;
	height: 300px;
}

#beforeDiv {
	height: 20%;
	background-color: #A3B2BF;
	box-sizing: border-box;
}

#totalDiv {
	height: 80%;
	background-color: #3F5B73;
	box-sizing: border-box;
}

#total_box {
	margin: 0 auto;
	width: 80%;
	height: 100%;
	box-sizing: border-box;
}

#beforeBox {
	float: left;
	height: 100%;
	font-size: 18px;
	line-height: 50px;
	padding-left: 10px;
}

a {
	text-decoration: none;
	color: black;
}

.total_box {
	width: 33.3%;
	height: 100%;
	border: 1px solid white;
	float: left;
	box-sizing: border-box;
	border: 1px solid white;
}

.total_title {
	font-size: 20px;
	font-weight: bold;
}

.finally_total {
	font-size: 25px;
	font-weight: bold;
}

#totalTalbe {
	width: 100%;
	height: 100%;
	color: white;
}

#totalTalbe tr:nth-child(1), tr:nth-child(2) {
	height: 20px;
}

#totalTalbe td:nth-child(1) {
	padding-left: 20px;
	padding-top: 20px;
}

#totalTalbe td {
	padding-left: 20px;
	padding-right: 20px;
}

#totalTalbe td:nth-child(2) {
	text-align: right;
}

#buyBtn {
	width: 100%;
	height: 80%;
	font-size: 35px;
	border-style: none;
	background-color: white;
}